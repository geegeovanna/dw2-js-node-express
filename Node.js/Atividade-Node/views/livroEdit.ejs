<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar Livro</h1>
            <hr>
            <form method="POST" action="/livros/update/<%= livro.id %>">
                <label>Titulo do livro:</label>
                <input type="text" name="titulo" id="titulo" value="<%= livro.titulo %>" class="form-control" required>

                <label>Autor do livro:</label>
                <input type="text" name="autor" id="autor" value="<%= livro.autor %>" class="form-control" required>
                                
                <label>Genero do livro:</label>
                <input type="text" name="genero" id="genero" value="<%= livro.genero %>" class="form-control" required>
            
                <br>
                <input type="hidden" name="id" value="<%= livro.id %>">
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações realizadas para o livro <%= livro.titulo %>?')">
            </form>
            <hr>
        </div>
    </div>
</div>
<br>
<%- include ('partials/footer.ejs') %>